<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_322Mobile.RegisterPage">
    <ContentPage.Content>
        <StackLayout Margin="10,35,10,10">
            <Label Text="Register"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
            <Editor x:Name="username"
                Placeholder="Username"
                HeightRequest="50" 
                Margin="0,10"/>
            <Editor x:Name="password"
                Placeholder="Password"
                HeightRequest="50" 
                Margin="0,10"/>
            <Editor x:Name="email"
                Placeholder="Email"
                HeightRequest="50" 
                Margin="0,10"/>
            <Button Text="Register" Clicked="OnRegisterButtonClicked"></Button>
            <Label x:Name="temp"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>