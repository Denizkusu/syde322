<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:_322Mobile"
             x:Class="_322Mobile.StartPage"
             BackgroundColor="#1F2631">
    
    <Grid>
        <Image VerticalOptions="Center" HorizontalOptions="Center" Source="bfLogo.png" HeightRequest="250" WidthRequest="250"></Image>
        <StackLayout VerticalOptions="End" Spacing="5" Padding="0" Margin="0,25">
        <Button Text="Login" Clicked="OnLoginButtonClicked" 
                Margin="10,5" BackgroundColor="#00aced" TextColor="#fff" 
                FontFamily="Helvetica" FontSize="Large" FontAttributes="Bold"
                HeightRequest="60"></Button>
            
        <Button Text="Register" Clicked="OnRegisterButtonClicked" 
                Margin="10,5" BackgroundColor="#00aced" TextColor="#fff" 
                FontFamily="Helvetica" FontSize="Large" FontAttributes="Bold"
                HeightRequest="60"></Button>
    </StackLayout>        
    </Grid>


</ContentPage>
